@model Inventario.Models.Empleado

<h1>Crear Empleado</h1>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="NombreCompleto">Nombre Completo</label>
        <input type="text" class="form-control" asp-for="NombreCompleto" />
    </div>
    <div class="form-group">
        <label for="Cargo">Cargo</label>
        <input type="text" class="form-control" asp-for="Cargo" />
    </div>
    <div class="form-group">
        <label for="Departamento">Departamento</label>
        <input type="text" class="form-control" asp-for="Departamento" />
    </div>
    <div class="form-group">
        <label for="FechaContratacion">Fecha de Contratación</label>
        <input type="date" class="form-control" asp-for="FechaContratacion" />
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
</form>
